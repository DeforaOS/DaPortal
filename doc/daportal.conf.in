#$Id$
#debug=1
#prefix=@PREFIX@
theme=DaPortal
icontheme=gnome
title=DaPortal

[defaults]
charset=utf-8
#locale=
#module=
#action=
#id=

[engine]
#backend=cli
#backend=clihttp
#backend=dummy
#backend=email
#backend=gtk
#backend=http
#backend=httpfriendly

[auth]
#backend=http
#backend=session
#backend=unix

[auth::basic]
#realm=DaPortal

[auth::session]
#avoids session-fixation attacks by regenerating the session's ID upon logins;
#disable if logins are not functional.
regenerate=1

[database]
#backend=pdo
#backend=pgsql
#backend=sqlite2
#backend=sqlite3
#debug=1

[database::pdo]
#dsn=sqlite:/var/www/sqlite/daportal.db3

[database::pgsql]
#persistent=0
#username=
#password=
#database=
#hostname=
#port=
#timeout=
#service=

[database::sqlite2]
#filename=/var/www/sqlite/daportal.db

[database::sqlite3]
#filename=/var/www/sqlite/daportal.db3

[engine::clihttp]
#hostname=localhost
#port=80
#friendly=1
#for SSL
#ssl=1
#port=443

[engine::http]
#private=1
#private::module=user
#private::actions=login,register,reset

[engine::httpfriendly]
#kicker=
#lowercase=0

[format]
#backend=atom
#backend=csv
#backend=html
#backend=html5
#backend=pdf
#backend=xhtml1
#backend=xhtml11
#backend=xml

[format::csv]
#titles=1

[format::html]
#alternate_themes=1
#favicon=
#javascript=1
#viewport::width=device-width

[format::application/pdf]
backend=fpdf

[format::application/xml]
backend=xml

[format::text/csv]
backend=csv

[format::text/html]
#backend=html
backend=html5
#backend=xhtml1
#backend=xhtml11

[format::text/plain]
backend=plain

[format::text/xml]
backend=xml

[mime]
globs=@PREFIX@/share/mime/globs

[module::browser]
#root=/tmp

[module::content]
#moderate=1

[module::download]
#root=/tmp/download

[module::project]
#SCM backend: CVS
#scm::backend::cvs::cvsroot=/tmp/cvs
#scm::backend::cvs::repository=localhost:/tmp/cvs

[module::user]
#allow users (not administrators) to close their own account (default: disabled)
#close=1
#allow new users to register an account (default: disabled)
#register=1
#allow users to reset their password (default: disabled)
#reset=1

[module::wiki]
#anonymous=0
#root=/tmp/wiki

[template]
backend=basic
#backend=desktop

[template::basic]
#footer=
#homepage=http://
#title=DaPortal
